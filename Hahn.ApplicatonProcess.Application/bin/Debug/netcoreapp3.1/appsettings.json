{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsofot": "Information",
        "System": "Warning"
      }
    },
    // Can also be added Enrich here. However, I passed it to keep number of nuget packages relatively small.
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "log.txt",
          "outputTemplate": "{Timestamp:} {Message}{NewLine:1}{Exception:1}"
        }
      }
    ]
  }
}
